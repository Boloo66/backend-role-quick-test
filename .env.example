# Application
PORT=3000
NODE_ENV=development
APP_NAME=Wallet Service
APP_VERSION=1.0.0

# Database (currently using in-memory)
DB_TYPE=in-memory

# Wallet Configuration in cents
DEFAULT_CURRENCY=USD
MAX_TRANSFER_AMOUNT=1000000
MIN_TRANSFER_AMOUNT=10

# Security
ENABLE_IDEMPOTENCY=true
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
ENABLE_CONSOLE_LOGS=true